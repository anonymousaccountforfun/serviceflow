# ServiceFlow Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/serviceflow"
DIRECT_URL="postgresql://postgres:password@localhost:5432/serviceflow"

# Redis (Upstash)
REDIS_URL="redis://localhost:6379"

# ============================================
# AUTHENTICATION (Clerk)
# ============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ============================================
# TELEPHONY (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WEBHOOK_URL=

# ============================================
# VOICE AI (Vapi)
# ============================================
VAPI_API_KEY=
VAPI_ASSISTANT_ID=

# ============================================
# LLM (Anthropic)
# ============================================
ANTHROPIC_API_KEY=

# ============================================
# PAYMENTS (Stripe)
# ============================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# Stripe Price IDs for subscription plans (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER=
STRIPE_PRICE_GROWTH=
STRIPE_PRICE_SCALE=

# ============================================
# GOOGLE (GBP Integration)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# ============================================
# APP CONFIG
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
NODE_ENV=development

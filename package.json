{
  "name": "serviceflow",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate": "pnpm --filter @serviceflow/database db:generate",
    "db:push": "pnpm --filter @serviceflow/database db:push",
    "db:seed": "pnpm --filter @serviceflow/database db:seed",
    "db:studio": "pnpm --filter @serviceflow/database studio",
    "db:reset": "pnpm --filter @serviceflow/database db:reset",
    "setup": "bash scripts/setup.sh",
    "test:missed-call": "tsx scripts/test-missed-call.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "test:requirements": "tsx scripts/generate-test-report.ts",
    "test:requirements:ci": "tsx scripts/generate-test-report.ts --ci",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=tests/e2e/playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=tests/e2e/playwright.config.ts --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
